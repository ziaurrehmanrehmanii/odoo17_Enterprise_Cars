<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="hr_commission_history_rule" model="ir.rule">
            <field name="name">Commission History: Read-only for all users</field>
            <field name="model_id" ref="model_hr_commission_history"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="hr_peas_group" model="res.groups">
            <field name="name">PEAS Users</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('sales_team.group_sale_salesman')),(4, ref('purchase.group_purchase_user'))]"/>
            <field name="comment">Users who are marked as PEAS employees</field>
        </record>
    </data>
</odoo>