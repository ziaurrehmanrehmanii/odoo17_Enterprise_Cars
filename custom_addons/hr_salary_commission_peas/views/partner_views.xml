<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend partner form view -->
    <record id="view_partner_form_employee_related" model="ir.ui.view">
        <field name="name">res.partner.form.employee.related</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Employee Info" invisible="not is_employee_vendor and not is_employee_customer">
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="is_employee_vendor" readonly="1"/>
                        <field name="is_employee_customer" readonly="1"/>
                    </group>
                    <div class="alert alert-info" role="alert" 
                         invisible="not is_employee_vendor and not is_employee_customer">
                        <p>This partner record was automatically created from an employee record. 
                        Changes to the employee will be synchronized with this partner.</p>
                    </div>
                </page>
            </xpath>
        </field>
    </record>
</odoo>