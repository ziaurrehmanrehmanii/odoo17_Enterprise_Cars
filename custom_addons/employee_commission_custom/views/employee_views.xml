<odoo>
  <record id="view_employee_form_inherit_commission" model="ir.ui.view">
    <field name="name">hr.employee.form.inherit.commission</field>
    <field name="model">hr.employee</field>
    <field name="inherit_id" ref="hr.view_employee_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='work_email']" position="after">
        <field name="employee_type"/>
        <field name="journal_id" invisible="employee_type != 'pase'"/>
        <field name="current_salary"/>
        <field name="current_commission_percentage" invisible="employee_type == 'salary'"/>
        <field name="total_commission" readonly="1" invisible="employee_type == 'salary'"/>
        <field name="commission_history_ids" widget="one2many_list" invisible="employee_type == 'salary'">
          <tree editable="bottom">
            <field name="percentage"/>
            <field name="start_date"/>
            <field name="end_date"/>
            <field name="amount"/>
          </tree>
        </field>
      </xpath>
    </field>
  </record>
</odoo>