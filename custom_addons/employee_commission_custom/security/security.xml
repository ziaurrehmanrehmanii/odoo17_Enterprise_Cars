<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data noupdate="0">
    <!-- Define access groups -->
    <record id="group_commission_manager" model="res.groups">
      <field name="name">Commission Manager</field>
      <field name="category_id" ref="base.module_category_human_resources_employees"/>
      <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
    </record>
    
    <!-- PEASE Group with sales and purchase access -->
    <record id="group_pease" model="res.groups">
      <field name="name">PEASE Special Access</field>
      <field name="category_id" ref="base.module_category_human_resources_employees"/>
      <field name="implied_ids" eval="[
        (4, ref('sales_team.group_sale_salesman_all_leads')),
        (4, ref('purchase.group_purchase_user')),
        (4, ref('account.group_account_invoice'))
      ]"/>
    </record>
  </data>
  
  <!-- Security rules -->
  <data noupdate="1">
    <record id="rule_commission_history_employee" model="ir.rule">
      <field name="name">Employee Commission History: Own records only</field>
      <field name="model_id" ref="model_employee_commission_history"/>
      <field name="domain_force">[('employee_id.user_id','=',user.id)]</field>
      <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>
    
    <record id="rule_commission_history_manager" model="ir.rule">
      <field name="name">Employee Commission History: All records</field>
      <field name="model_id" ref="model_employee_commission_history"/>
      <field name="domain_force">[(1,'=',1)]</field>
      <field name="groups" eval="[(4, ref('hr.group_hr_manager')), (4, ref('employee_commission_custom.group_commission_manager'))]"/>
    </record>
  </data>
</odoo>