<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_partner_kanban" model="ir.ui.view">
        <field name="name">car.sales.res.partner.kanban</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.res_partner_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_kanban_details')]" position="inside">
                <div t-if="record.is_company.raw_value" class="mt-1">
                    <button name="action_view_car_connections" type="object" class="btn btn-sm btn-primary" invisible="not id">
                        <span>Car Connections</span>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
