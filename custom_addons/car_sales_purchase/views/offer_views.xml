<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Offer Tree View -->
    <record id="view_car_offer_tree" model="ir.ui.view">
        <field name="name">car.offer.tree</field>
        <field name="model">car.offer</field>
        <field name="arch" type="xml">
            <tree string="Offers" decoration-info="state == 'draft'" decoration-warning="state == 'sent'" decoration-success="state == 'accepted'" decoration-danger="state == 'rejected'">
                <field name="name"/>
                <field name="car_id"/>
                <field name="transaction_type"/>
                <field name="connection_id"/>
                <field name="date"/>
                <field name="price"/>
                <field name="state"/>
                <field name="user_id" widget="many2one_avatar_user"/>
            </tree>
        </field>
    </record>

    <!-- Offer Form View -->
    <record id="view_car_offer_form" model="ir.ui.view">
        <field name="name">car.offer.form</field>
        <field name="model">car.offer</field>
        <field name="arch" type="xml">
            <form string="Offer">
                <header>
                    <button name="action_send" string="Send" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_accept" string="Accept" type="object" class="oe_highlight" invisible="state not in ['draft','sent']"/>
                    <button name="action_reject" string="Reject" type="object" class="btn btn-danger" invisible="state not in ['draft','sent']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,sent,accepted,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="car_id" options="{'no_create': True}" readonly="context.get('default_car_id', False)"/>
                            <field name="transaction_type" readonly="1"/>
                            <field name="connection_id" readonly="1"/>
                            <field name="user_id" widget="many2one_avatar_user" readonly="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="company_id" invisible="1"/>
                            <field name="currency_id" options="{'no_create': True}" readonly="1"/>
                            <field name="price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Notes">
                            <field name="notes"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Offer Search View -->
    <record id="view_car_offer_search" model="ir.ui.view">
        <field name="name">car.offer.search</field>
        <field name="model">car.offer</field>
        <field name="arch" type="xml">
            <search string="Offers">
                <field name="name"/>
                <field name="car_id"/>
                <field name="connection_id"/>
                <field name="user_id"/>
                <separator/>
                <filter string="My Offers" name="my_offers" domain="[('user_id', '=', uid)]"/>
                <separator/>
                <filter string="Buy Offers" name="buy_offers" domain="[('transaction_type', '=', 'buy')]"/>
                <filter string="Sell Offers" name="sell_offers" domain="[('transaction_type', '=', 'sell')]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Sent" name="sent" domain="[('state', '=', 'sent')]"/>
                <filter string="Accepted" name="accepted" domain="[('state', '=', 'accepted')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter string="Car" name="group_by_car" context="{'group_by': 'car_id'}"/>
                    <filter string="Connection" name="group_by_connection" context="{'group_by': 'connection_id'}"/>
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Offer Action -->
    <record id="action_car_offer" model="ir.actions.act_window">
        <field name="name">Offers</field>
        <field name="res_model">car.offer</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_my_offers': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No offers found!
            </p>
        </field>
    </record>
</odoo>
