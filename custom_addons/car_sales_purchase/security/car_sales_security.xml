<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Category -->
        <record id="module_category_car_sales_purchase" model="ir.module.category">
            <field name="name">Car Sales and Purchase</field>
            <field name="description">Category for Car Sales and Purchase</field>
            <field name="sequence">50</field>
        </record>

        <!-- Groups -->
        <record id="group_car_sales_purchase_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_car_sales_purchase"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_car_sales_purchase_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_car_sales_purchase"/>
            <field name="implied_ids" eval="[(4, ref('group_car_sales_purchase_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Rules -->
        <!-- Connection: Users can only see their own connections -->
        <record id="rule_car_connection_user" model="ir.rule">
            <field name="name">Car Connection: User can only see own records</field>
            <field name="model_id" ref="model_car_connection"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_car_sales_purchase_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Connection: Managers can see all connections -->
        <record id="rule_car_connection_manager" model="ir.rule">
            <field name="name">Car Connection: Manager can see all records</field>
            <field name="model_id" ref="model_car_connection"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_car_sales_purchase_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Car: Users can only see their own cars -->
        <record id="rule_car_details_user" model="ir.rule">
            <field name="name">Car Details: User can only see own records</field>
            <field name="model_id" ref="model_car_details"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_car_sales_purchase_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Car: Managers can see all cars -->
        <record id="rule_car_details_manager" model="ir.rule">
            <field name="name">Car Details: Manager can see all records</field>
            <field name="model_id" ref="model_car_details"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_car_sales_purchase_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Offer: Users can only see their own offers -->
        <record id="rule_car_offer_user" model="ir.rule">
            <field name="name">Car Offer: User can only see own records</field>
            <field name="model_id" ref="model_car_offer"/>
            <field name="domain_force">[('user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_car_sales_purchase_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Offer: Managers can see all offers -->
        <record id="rule_car_offer_manager" model="ir.rule">
            <field name="name">Car Offer: Manager can see all records</field>
            <field name="model_id" ref="model_car_offer"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_car_sales_purchase_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>
