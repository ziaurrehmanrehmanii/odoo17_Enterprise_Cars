<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action to view all warehouses across companies -->
    <record id="action_warehouse_all_companies" model="ir.actions.act_window">
        <field name="name">All Warehouses</field>
        <field name="res_model">stock.warehouse</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_by_company': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                This view shows warehouses from all companies you have access to.
            </p>
        </field>
    </record>

    <!-- Menu item to access all warehouses -->
    <menuitem id="menu_warehouse_all_companies" 
              name="All Warehouses"
              parent="stock.menu_warehouse_config"
              action="action_warehouse_all_companies"
              sequence="10"/>
</odoo>