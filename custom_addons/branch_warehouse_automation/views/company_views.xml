<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Extend the company form view to show warehouses -->
    <record id="view_company_form_inherit_warehouses" model="ir.ui.view">
        <field name="name">res.company.form.inherit.warehouses</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Warehouses" name="warehouses">
                    <field name="warehouse_ids" readonly="1">
                        <tree>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="company_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>