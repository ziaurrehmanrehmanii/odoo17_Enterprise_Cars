<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Define custom security category -->
    <record id="category_peas_employee" model="ir.module.category">
        <field name="name">Peas Employee</field>
        <field name="description">Security category for Peas Employee</field>
        <field name="sequence">1</field>
    </record>

    <!-- Define Peas Employee group -->
    <record id="group_peas_employee_user" model="res.groups">
        <field name="name">Peas Employee</field>
        <field name="category_id" ref="category_peas_employee"/>
        <field name="implied_ids" eval="[
            (4, ref('base.group_user')), 
            (4, ref('account.group_account_invoice')),
            (4, ref('account.group_account_readonly')),
            (4, ref('purchase.group_purchase_user'))
        ]"/>
    </record>
</odoo>
