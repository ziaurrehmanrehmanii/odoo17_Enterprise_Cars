<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Pay Advance Wizard Form View -->
    <record id="view_peas_employee_pay_advance_form" model="ir.ui.view">
        <field name="name">peas.employee.pay.advance.form</field>
        <field name="model">peas.employee.pay.advance</field>
        <field name="arch" type="xml">
            <form string="Pay Advance">
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="receivable_account_id"/>
                            <field name="debit_account_id" options="{'no_create': True}"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" options="{'no_create': True}"/>
                            <field name="payment_date"/>
                            <field name="journal_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="memo" placeholder="Add a memo for this payment..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_pay_advance" string="Pay Advance" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Pay Advance Action -->
    <record id="action_peas_employee_pay_advance" model="ir.actions.act_window">
        <field name="name">Pay Advance</field>
        <field name="res_model">peas.employee.pay.advance</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
    </record>
</odoo>