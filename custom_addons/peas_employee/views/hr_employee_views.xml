<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hr.employee form -->
    <record id="view_hr_employee_form" model="ir.ui.view">
        <field name="name">view.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Make work_email required based on is_peas_employee -->
            <field name="work_email" position="attributes">
                <attribute name="required">is_peas_employee == true</attribute>
            </field>

            <!-- Add login field for PEAS employees when creating users -->
            <field name="coach_id" position="after">
                <field name="is_peas_employee"/>
                <field name="user_id" position="attributes" readonly="1" create="0" edit="0" invisible="is_peas_employee == false">
                    <attribute name="required">is_peas_employee == true</attribute>
                </field>
                <!-- These fields are always readonly but only visible when is_peas_employee is true -->
                <field name="vendor_id" readonly="1" create="0" edit="0" invisible="is_peas_employee == false"/>
                <field name="customer_id" readonly="1" create="0" edit="0" invisible="is_peas_employee == false"/>
            </field>
        </field>
    </record>

</odoo>