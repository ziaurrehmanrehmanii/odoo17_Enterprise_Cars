<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View hr.employee form -->
    <record id="view_hr_employee_form" model="ir.ui.view">
        <field name="name">view.hr.employee.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Add is_peas_employee field at the very beginning -->
            <field name="coach_id" position="after">
                <field name="is_peas_employee" invisible="0"/>
                <button name="%(action_peas_employee_pay_advance)d" type="action" string="Pay Advance" class="oe_stat_button btn-primary" icon="fa-money" invisible="not is_peas_employee" context="{'default_employee_id': id}"/>
            </field>

            <!-- Make work_email required based on is_peas_employee -->
            <field name="work_email" required="is_peas_employee" position="attributes"/>


            <!-- Add login field for PEAS employees when creating users -->
            <field name="coach_id" position="after">
                <!-- These fields are always readonly but only visible when is_peas_employee is true -->
                <field name="user_id" invisible="not is_peas_employee" readonly="1" create="0" edit="0"/>
                <field name="vendor_id" readonly="1" create="0" edit="0" invisible="not is_peas_employee"/>
                <field name="customer_id" readonly="1" create="0" edit="0" invisible="not is_peas_employee"/>
                <field name="journal_id" readonly="1" create="0" edit="0" invisible="not is_peas_employee"/>
            </field>
            <!-- Add Pay Advance button -->
        </field>
    </record>

</odoo>