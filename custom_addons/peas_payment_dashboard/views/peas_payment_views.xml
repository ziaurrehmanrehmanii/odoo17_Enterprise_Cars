<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- PEAS Payment tree view -->
    <record id="view_peas_payment_tree" model="ir.ui.view">
        <field name="name">peas.payment.tree</field>
        <field name="model">peas.payment</field>
        <field name="arch" type="xml">
            <tree decoration-success="state == 'posted'" decoration-danger="state == 'cancelled'" decoration-info="state == 'draft'">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="payment_date"/>
                <field name="payment_type"/>
                <field name="amount"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <!-- PEAS Payment form view -->
    <record id="view_peas_payment_form" model="ir.ui.view">
        <field name="name">peas.payment.form</field>
        <field name="model">peas.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_post" string="Post" type="object" class="oe_highlight" invisible="state != 'draft'"/>
                    <button name="action_cancel" string="Cancel" type="object" invisible="state not in ('draft', 'posted')"/>
                    <button name="action_draft" string="Set to Draft" type="object" invisible="state != 'cancelled'"/>
                    <button name="action_print_report" string="Print" type="object" class="oe_highlight"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,posted,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="payment_date"/>
                            <field name="payment_type"/>
                        </group>
                        <group>
                            <field name="amount"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="related_invoice_id" invisible="related_invoice_id == False"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Add any notes or description here..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- PEAS Payment search view -->
    <record id="view_peas_payment_search" model="ir.ui.view">
        <field name="name">peas.payment.search</field>
        <field name="model">peas.payment</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="payment_type"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <group expand="0" string="Group By">
                    <filter string="Employee" name="employee" context="{'group_by': 'employee_id'}"/>
                    <filter string="Payment Type" name="payment_type" context="{'group_by': 'payment_type'}"/>
                    <filter string="Status" name="status" context="{'group_by': 'state'}"/>
                    <filter string="Month" name="month" context="{'group_by': 'payment_date:month'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- PEAS Payment action -->
    <record id="action_peas_payment" model="ir.actions.act_window">
        <field name="name">PEAS Payments</field>
        <field name="res_model">peas.payment</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_peas_payment_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No payments found.
            </p>
            <p>
                Create a new payment for a PEAS user.
            </p>
        </field>
    </record>
    
    <!-- Add payment menu -->
    <menuitem id="menu_peas_payment" name="Payments" parent="menu_peas_dashboard_root" action="action_peas_payment" sequence="2"/>
</odoo>