<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Create PEAS Manager group -->
        <record id="group_peas_manager" model="res.groups">
            <field name="name">PEAS Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>
        
        <!-- Access rules for payments -->
        <record id="peas_payment_rule_user" model="ir.rule">
            <field name="name">PEAS Payment: HR Users can see all payments</field>
            <field name="model_id" search="[('model', '=', 'peas.payment')]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>
        
        <!-- Access rules for dashboard -->
        <record id="peas_dashboard_rule_user" model="ir.rule">
            <field name="name">PEAS Dashboard: HR Users can see all dashboards</field>
            <field name="model_id" search="[('model', '=', 'peas.dashboard')]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('hr.group_hr_user'))]"/>
        </record>
    </data>
</odoo>