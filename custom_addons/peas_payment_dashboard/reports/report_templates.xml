<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_peas_payment_document">
        <div class="page">
            <div class="row">
                <div class="col-12 text-center">
                    <h2>PEAS Payment Receipt</h2>
                </div>
            </div>
            
            <div class="row mt16">
                <div class="col-6">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Employee:</strong></td>
                            <td><span t-field="doc.employee_id.name"/></td>
                        </tr>
                        <tr>
                            <td><strong>Reference:</strong></td>
                            <td><span t-field="doc.name"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date:</strong></td>
                            <td><span t-field="doc.payment_date"/></td>
                        </tr>
                    </table>
                </div>
                <div class="col-6">
                    <table class="table table-sm">
                        <tr>
                            <td><strong>Payment Type:</strong></td>
                            <td><span t-field="doc.payment_type"/></td>
                        </tr>
                        <tr>
                            <td><strong>Status:</strong></td>
                            <td><span t-field="doc.state"/></td>
                        </tr>
                        <tr>
                            <td><strong>Amount:</strong></td>
                            <td><strong><span t-field="doc.amount" t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/></strong></td>
                        </tr>
                    </table>
                </div>
            </div>
            
            <div class="row mt16">
                <div class="col-12">
                    <h4>Description</h4>
                    <p t-field="doc.description"/>
                </div>
            </div>
            
            <div class="row mt32">
                <div class="col-6">
                    <p>Authorized Signature</p>
                    <br/><br/><br/>
                    <p>_____________________</p>
                </div>
                <div class="col-6 text-right">
                    <p>Employee Signature</p>
                    <br/><br/><br/>
                    <p>_____________________</p> 
                </div>
            </div>
        </div>
    </template>
</odoo>